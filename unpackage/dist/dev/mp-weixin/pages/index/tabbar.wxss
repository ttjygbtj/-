  background-color: #f1f1f1;
  font-size: 28rpx;
  color: #333333;
  font-family: Helvetica Neue, Helvetica, sans-serif;
}
view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
}
.round {
  border-radius: 5000rpx;
}
.radius {
  border-radius: 6rpx;
}
